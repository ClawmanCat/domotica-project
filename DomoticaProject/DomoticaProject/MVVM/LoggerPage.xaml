<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DomoticaProject.MVVM.LoggerPage">
    <ContentPage.Content>
          <ListView x:Name="LoggerList" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HasUnevenRows="True">
               <ListView.ItemTemplate>
                    <DataTemplate>
                         <ViewCell>
                              <StackLayout>
                                   <Label Text="{Binding Text}" TextColor="{Binding TextColor}" VerticalOptions="StartAndExpand"></Label>
                              </StackLayout>
                         </ViewCell>
                    </DataTemplate>
               </ListView.ItemTemplate>
          </ListView>
     </ContentPage.Content>
</ContentPage>