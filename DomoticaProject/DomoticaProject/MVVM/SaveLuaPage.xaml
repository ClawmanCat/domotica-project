<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DomoticaProject.MVVM.SaveLuaPage">
    <ContentPage.Content>
          <StackLayout VerticalOptions="Center">
               <Label Text="Save as: " HorizontalOptions="Center"></Label>

               <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Entry WidthRequest="256" x:Name="FilenameEntry" HorizontalOptions="Center" VerticalOptions="Center"></Entry>
                    <Label Text=".lua" HorizontalOptions="Center" VerticalOptions="Center"></Label>
               </StackLayout>

               <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button WidthRequest="128" Text="Save" Margin="5" HorizontalOptions="Center" VerticalOptions="Center" Clicked="SaveButtonClicked"></Button>
                    <Button WidthRequest="128" Text="Cancel" Margin="5" HorizontalOptions="Center" VerticalOptions="Center" Clicked="CancelButtonClicked"></Button>
               </StackLayout>
          </StackLayout>
    </ContentPage.Content>
</ContentPage>