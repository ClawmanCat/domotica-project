<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DomoticaProject.Sceduler">
    
    <ListView x:Name="ArduinoList" RowHeight="72" SelectionMode="None" ItemTapped="ArduinoList_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="4">
                        <Label x:Name="name" Text="{Binding Name}" FontSize="16" Margin="0,8"></Label>
                        <Label x:Name="des" Text="{Binding Description}" FontSize="8" Margin="0,8"></Label>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>